<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/answer_radius" />
            <gradient android:angle="-45" android:endColor="@color/answerStartColor" android:startColor="@color/answerEndColor" android:type="linear" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/answer_radius" />
            <gradient android:angle="-45" android:endColor="@color/submitEndColor" android:startColor="@color/submitStartColor" android:type="linear" />
            <stroke android:width="2dp" android:color="@android:color/white" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/answer_radius" />
            <gradient android:angle="-45" android:endColor="@color/answerEndColor" android:startColor="@color/answerStartColor" android:type="linear" />
        </shape>
    </item>
</selector>