<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:angle="-45" android:endColor="@color/submitStartColor" android:startColor="@color/submitEndColor" android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:angle="-45" android:endColor="@color/submitEndColor" android:startColor="@color/submitStartColor" android:type="linear" />
        </shape>
    </item>
</selector>